menu "Analog Sensors"

config ANALOG_SEN_USE_DATA_STORAGE
    bool "Sensor data storage"
    default false
    help
        Let sensor data be stored.

config ANALOG_SEN_USE_CONF_STORAGE
    bool "Sensor configurations storage"
    default false
    help
        Let sensor data be stored and updated.

config ANALOG_SEN_DEFAULT_ATT
    int "Default ADC attenuation"
    default 0
    range 0 3
    help
        Initial attenuation value. 0 - 0dB, 1 - 2.5dB, 2 - 6dB, 3 - 11dB.

config ANALOG_DEFAULT_PERIOD_MS
    int "Sensor default period (ms)"
    default 15000
    range 0 4294967295
    help
        Default data acquisition period in milliseconds.
        
endmenu
