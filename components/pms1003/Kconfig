menu "PMS1003"

config PMS1003_USE_DATA_STORAGE
    bool "Sensor data storage"
    default false
    help

config PMS1003_USE_CONF_STORAGE
    bool "Sensor configurations storage"
    default false
    help
    Let sensor data be stored and updated.

config PMS1003_AFTER_AWAKE_DELAY_MS
    int "Delay after awake"
    default 30000
    range 0 4294967295
    help
        Delay after sleep before get measurement in milliseconds. If zero, delay is disabled.

config PMS1003_DEFAULT_PERIOD_MS
    int "Sensor default period (ms)"
    default 60000
    range 0 4294967295
    help
        Default data acquisition period in milliseconds.

endmenu
