menu "VIRTUAL_SENSOR"

config VIRTUAL_SENSOR_USE_DATA_STORAGE
    bool "Sensor data storage"
    default false
    help
        Let sensor data be stored.

config VIRTUAL_SENSOR_USE_CONF_STORAGE
    bool "Sensor configurations storage"
    default false
    help
        Let sensor data be stored and updated.

config VIRTUAL_SENSOR_DEFAULT_PERIOD_MS
    int "Sensor default period (ms)"
    default 10000
    range 0 4294967295
    help
        Default data acquisition period in milliseconds.

endmenu
